---
import BaseLayout from '../layouts/BaseLayout.astro';
import OnboardingModal from '../components/react/OnboardingModal';
import { roleOptions } from '../data/navigation';
import { Music, Sparkles, Palette, Briefcase, Disc3, Calendar, Settings, Heart, ArrowRight } from 'lucide-react';

const pageTitle = 'Join BIO BEATS â€” Create Your Account';
const pageDescription = 'Join the BIO BEATS platform and become part of the electronic music ecosystem.';

const iconComponents: Record<string, any> = {
  Music,
  Sparkles,
  Palette,
  Briefcase,
  Disc3,
  Calendar,
  Settings,
  Heart,
};
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <!-- Header -->
  <section class="py-16 bg-gradient-to-b from-bio-gray-900 to-bio-black">
    <div class="container-narrow text-center">
      <h1 class="text-bio-white mb-4">Join BIO BEATS</h1>
      <p class="text-xl text-bio-gray-400">
        Select your role to get started with the platform.
      </p>
    </div>
  </section>

  <!-- Role Selection -->
  <section class="section bg-bio-black">
    <div class="container-wide">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        {roleOptions.map((role) => {
          const IconComponent = iconComponents[role.icon];
          return (
            <a
              href={`/join/${role.id}`}
              class="group card-hover p-6 text-center"
            >
              <div class="w-16 h-16 mx-auto rounded-full bg-bio-gray-800 flex items-center justify-center mb-4 group-hover:bg-bio-accent/20 transition-colors">
                <IconComponent className="w-8 h-8 text-bio-gray-400 group-hover:text-bio-accent transition-colors" />
              </div>
              <h3 class="font-semibold text-bio-white mb-2 group-hover:text-bio-accent transition-colors">
                {role.label}
              </h3>
              <p class="text-sm text-bio-gray-500">
                {role.description}
              </p>
            </a>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Already have account -->
  <section class="py-12 bg-bio-gray-900">
    <div class="container-narrow text-center">
      <p class="text-bio-gray-400">
        Already have an account?{' '}
        <a href="/login" class="text-bio-accent hover:underline">
          Login here
        </a>
      </p>
    </div>
  </section>
</BaseLayout>
