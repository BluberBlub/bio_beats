---
import Layout from "../../layouts/AdminLayout.astro";
import { Users, Music, Building2, TrendingUp } from "lucide-react";

// Mock stats
const stats = [
    { label: "Total Users", value: "1,234", icon: Users, change: "+12%" },
    { label: "Active Festivals", value: "54", icon: Music, change: "+3%" },
    {
        label: "Verified Partners",
        value: "128",
        icon: Building2,
        change: "+8%",
    },
    {
        label: "Monthly Bookings",
        value: "892",
        icon: TrendingUp,
        change: "+24%",
    },
];
---

<Layout title="Dashboard">
    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        {
            stats.map((stat) => (
                <div class="bg-bio-gray-900 border border-bio-gray-800 p-6 rounded-xl">
                    <div class="flex items-start justify-between mb-4">
                        <div class="p-3 bg-bio-accent/10 rounded-lg">
                            <stat.icon className="w-6 h-6 text-bio-accent" />
                        </div>
                        <span class="text-green-400 text-sm font-medium">
                            {stat.change}
                        </span>
                    </div>
                    <h3 class="text-3xl font-bold text-white mb-1">
                        {stat.value}
                    </h3>
                    <p class="text-bio-gray-400 text-sm">{stat.label}</p>
                </div>
            ))
        }
    </div>

    <!-- Recent Activity Placeholder -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div class="bg-bio-gray-900 border border-bio-gray-800 rounded-xl p-6">
            <h3 class="text-xl font-bold mb-4">Recent Signups</h3>
            <div class="space-y-4">
                <p class="text-bio-gray-400 text-sm">No recent activity.</p>
            </div>
        </div>

        <div class="bg-bio-gray-900 border border-bio-gray-800 rounded-xl p-6">
            <h3 class="text-xl font-bold mb-4">Pending Approvals</h3>
            <div class="space-y-4">
                <p class="text-bio-gray-400 text-sm">All cleared!</p>
            </div>
        </div>
    </div>
</Layout>
