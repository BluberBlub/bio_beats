---
import AdminLayout from "../../../layouts/AdminLayout.astro";
import BookingTable from "../../../components/react/admin/BookingTable";
import { CirclePlus } from "lucide-react";
---

<AdminLayout title="Bookings">
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-3xl font-bold text-white mb-2">Bookings</h1>
            <p class="text-bio-gray-400">Manage artist bookings and requests</p>
        </div>
        <button class="btn-primary flex items-center gap-2">
            <CirclePlus className="w-5 h-5" />
            Create Booking
        </button>
    </div>

    <BookingTable client:load />
</AdminLayout>
