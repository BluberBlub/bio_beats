---
import AdminLoginForm from "../../components/react/admin/AdminLoginForm";
import "../../styles/global.css";
---

<script is:inline>
    if (typeof window !== "undefined") {
        const localAuth = localStorage.getItem("bio-admin-auth");
        const cookieAuth = document.cookie
            .split("; ")
            .find((row) => row.startsWith("bio-auth="));

        console.log("Login Auth Check:", { localAuth, cookieAuth });

        if (localAuth || cookieAuth) {
            console.log("Login: Auth found, redirecting to dashboard");
            window.location.href = "/admin/dashboard";
        }
    }
</script>

<html lang="de">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="robots" content="noindex, nofollow" />
        <title>Admin Login | BIO BEATS</title>
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <style>
            body {
                margin: 0;
                padding: 0;
                background-color: #0a0a0a;
                min-height: 100vh;
            }
        </style>
    </head>
    <body>
        <AdminLoginForm client:only="react" />
    </body>
</html>
