---
import BaseLayout from "../layouts/BaseLayout.astro";
import { CheckCircle, Mail, ArrowRight } from "lucide-react";

const pageTitle = "Check Your Email â€” BIO BEATS";
const pageDescription = "Verify your email to complete registration.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
    <section class="min-h-[80vh] flex items-center justify-center py-16">
        <div class="container-narrow">
            <div class="max-w-lg mx-auto text-center">
                <div
                    class="w-20 h-20 mx-auto rounded-full bg-green-500/20 flex items-center justify-center mb-8"
                >
                    <CheckCircle className="w-10 h-10 text-green-400" />
                </div>

                <h1 class="text-3xl font-bold text-bio-white mb-4">
                    Check your email
                </h1>

                <p class="text-bio-gray-400 text-lg mb-8">
                    We've sent a verification link to your email address. Click
                    the link to activate your account and get started.
                </p>

                <div class="card p-6 mb-8">
                    <div class="flex items-center gap-4">
                        <div
                            class="w-12 h-12 rounded-lg bg-bio-accent/10 flex items-center justify-center flex-shrink-0"
                        >
                            <Mail className="w-6 h-6 text-bio-accent" />
                        </div>
                        <div class="text-left">
                            <p class="text-bio-white font-medium">
                                Didn't receive the email?
                            </p>
                            <p class="text-bio-gray-400 text-sm">
                                Check your spam folder or request a new link.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="space-y-4">
                    <button id="resend-btn" class="btn-secondary w-full">
                        Resend Verification Email
                    </button>

                    <a
                        href="/login"
                        class="btn-ghost w-full inline-flex items-center justify-center gap-2"
                    >
                        Go to Login
                        <ArrowRight className="w-4 h-4" />
                    </a>
                </div>

                <p class="mt-8 text-sm text-bio-gray-500">
                    Need help? <a
                        href="/contact?reason=support"
                        class="text-bio-accent hover:underline"
                        >Contact support</a
                    >
                </p>
            </div>
        </div>
    </section>
</BaseLayout>

<script>
    const resendBtn = document.getElementById("resend-btn");
    const urlParams = new URLSearchParams(window.location.search);
    const email = urlParams.get("email");

    if (resendBtn) {
        resendBtn.addEventListener("click", async () => {
            if (!email) {
                alert("No email address found. Please login again.");
                return;
            }

            const originalText = resendBtn.innerText;
            resendBtn.innerText = "Sending...";
            resendBtn.setAttribute("disabled", "true");
            resendBtn.classList.add("opacity-50", "cursor-not-allowed");

            try {
                const response = await fetch("/api/auth/resend-verification", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ email }),
                });

                if (response.ok) {
                    resendBtn.innerText = "Email Sent!";
                } else {
                    resendBtn.innerText = "Error!";
                    console.error("Failed to resend");
                }
            } catch (err) {
                console.error(err);
                resendBtn.innerText = "Error!";
            }

            setTimeout(() => {
                resendBtn.innerText = originalText;
                resendBtn.removeAttribute("disabled");
                resendBtn.classList.remove("opacity-50", "cursor-not-allowed");
            }, 3000);
        });
    }
</script>
