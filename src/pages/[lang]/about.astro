---
export const prerender = true;
import BaseLayout from "../../layouts/BaseLayout.astro";
import {
    ArrowRight,
    CheckCircle,
    Users,
    Calendar,
    Shield,
    TrendingUp,
} from "lucide-react";
import { languages } from "../../i18n";
import { getTranslations } from "../../i18n";

export function getStaticPaths() {
    return Object.keys(languages).map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = getTranslations(lang as keyof typeof languages);
const ta = t.about;

const pageTitle = ta.pageTitle;
const pageDescription = ta.pageDescription;

const values = [
    {
        icon: "Users",
        title: ta.values.community.title,
        description: ta.values.community.desc,
    },
    {
        icon: "Shield",
        title: ta.values.trust.title,
        description: ta.values.trust.desc,
    },
    {
        icon: "TrendingUp",
        title: ta.values.sustainable.title,
        description: ta.values.sustainable.desc,
    },
    {
        icon: "Calendar",
        title: ta.values.infrastructure.title,
        description: ta.values.infrastructure.desc,
    },
];
---

<BaseLayout title={pageTitle} description={pageDescription} lang={lang}>
    <!-- Hero -->
    <section class="py-20 bg-gradient-to-b from-bio-gray-900 to-bio-black">
        <div class="container-wide">
            <div class="max-w-3xl">
                <h1 class="text-bio-white mb-6">
                    {ta.heroTitle}
                </h1>
                <p class="text-xl text-bio-gray-400 leading-relaxed">
                    {ta.heroSubtitle}
                </p>
            </div>
        </div>
    </section>

    <!-- Mission -->
    <section class="section bg-bio-black">
        <div class="container-wide">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
                <div>
                    <span
                        class="text-bio-accent text-sm font-semibold uppercase tracking-wider"
                        >{ta.missionLabel}</span
                    >
                    <h2 class="text-bio-white mt-4 mb-6">
                        {ta.missionTitle}
                    </h2>
                    <p class="text-bio-gray-400 text-lg leading-relaxed mb-6">
                        {ta.missionDesc1}
                    </p>
                    <p class="text-bio-gray-400 text-lg leading-relaxed mb-8">
                        {ta.missionDesc2}
                    </p>
                    <div class="space-y-3">
                        <div class="flex items-center gap-3 text-bio-gray-300">
                            <CheckCircle
                                className="w-5 h-5 text-bio-accent flex-shrink-0"
                            />
                            <span>{ta.missionPoints.infrastructure}</span>
                        </div>
                        <div class="flex items-center gap-3 text-bio-gray-300">
                            <CheckCircle
                                className="w-5 h-5 text-bio-accent flex-shrink-0"
                            />
                            <span>{ta.missionPoints.network}</span>
                        </div>
                        <div class="flex items-center gap-3 text-bio-gray-300">
                            <CheckCircle
                                className="w-5 h-5 text-bio-accent flex-shrink-0"
                            />
                            <span>{ta.missionPoints.finance}</span>
                        </div>
                        <div class="flex items-center gap-3 text-bio-gray-300">
                            <CheckCircle
                                className="w-5 h-5 text-bio-accent flex-shrink-0"
                            />
                            <span>{ta.missionPoints.services}</span>
                        </div>
                    </div>
                </div>
                <div class="relative">
                    <div
                        class="aspect-square rounded-2xl bg-bio-gray-800 overflow-hidden"
                    >
                        <div
                            class="absolute inset-0 bg-gradient-to-br from-bio-accent/20 to-transparent"
                        >
                        </div>
                        <div
                            class="absolute inset-0 flex items-center justify-center"
                        >
                            <div class="text-center">
                                <div
                                    class="text-6xl font-bold text-bio-white mb-2"
                                >
                                    B.E.A.T.S.
                                </div>
                                <div class="text-bio-gray-400">
                                    {ta.beatsFull}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Values -->
    <section class="section bg-bio-gray-900">
        <div class="container-wide">
            <div class="section-header">
                <h2 class="text-bio-white mb-4">{ta.valuesTitle}</h2>
                <p class="text-bio-gray-400 text-lg max-w-2xl mx-auto">
                    {ta.valuesSubtitle}
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                {
                    values.map((value) => (
                        <div class="card">
                            <div class="w-12 h-12 rounded-lg bg-bio-accent/10 flex items-center justify-center mb-4">
                                {value.icon === "Users" && (
                                    <Users className="w-6 h-6 text-bio-accent" />
                                )}
                                {value.icon === "Shield" && (
                                    <Shield className="w-6 h-6 text-bio-accent" />
                                )}
                                {value.icon === "TrendingUp" && (
                                    <TrendingUp className="w-6 h-6 text-bio-accent" />
                                )}
                                {value.icon === "Calendar" && (
                                    <Calendar className="w-6 h-6 text-bio-accent" />
                                )}
                            </div>
                            <h3 class="text-xl font-semibold text-bio-white mb-2">
                                {value.title}
                            </h3>
                            <p class="text-bio-gray-400">{value.description}</p>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- CTA -->
    <section class="section bg-bio-black">
        <div class="container-narrow text-center">
            <h2 class="text-bio-white mb-4">{ta.readyToJoin}</h2>
            <p class="text-bio-gray-400 text-lg mb-8 max-w-xl mx-auto">
                {ta.joinSubtitle}
            </p>
            <a
                href={`/${lang === "de" ? "de" : "en"}/join`}
                class="btn-primary inline-flex items-center gap-2"
            >
                {t.home.ctaPrimary}
                <ArrowRight className="w-4 h-4" />
            </a>
        </div>
    </section>
</BaseLayout>
