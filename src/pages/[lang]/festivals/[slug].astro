---
// SSR enabled (no prerender = true)
import BaseLayout from "../../../layouts/BaseLayout.astro";
import { festivals, getFestivalBySlug } from "../../../data/festivals";
import { getArtistBySlug } from "../../../data/artists";
import { getTranslations, languages } from "../../../i18n";
import {
    ArrowLeft,
    Calendar,
    MapPin,
    Users,
    ExternalLink,
    Globe,
    Music,
} from "lucide-react";

export function getStaticPaths() {
    return Object.keys(languages).flatMap((lang) =>
        festivals.map((festival) => ({
            params: { lang, slug: festival.slug },
            props: { festival },
        })),
    );
}

const { lang } = Astro.params;
const { festival } = Astro.props;

// Validate language (should be covered by getStaticPaths but good for type safety)
if (!lang || !Object.keys(languages).includes(lang)) {
    return Astro.redirect("/en/404");
}

// festival prop is passed from getStaticPaths
if (!festival) {
    return Astro.redirect(`/${lang}/404`);
}

const t = getTranslations(lang as keyof typeof languages);
const tf = t.festivals;
const tc = t.common;

// Get artist details for the lineup
const lineupArtists = festival.artistSlugs
    .map((slug: string) => getArtistBySlug(slug))
    .filter(Boolean);

const pageTitle = `${festival.name} — BIO BEATS`;
const pageDescription = festival.description.substring(0, 160);
---

<BaseLayout title={pageTitle} description={pageDescription} lang={lang}>
    <!-- Back Link -->
    <div class="bg-bio-black py-4">
        <div class="container-wide">
            <a
                href={`/${lang}/festivals`}
                class="inline-flex items-center gap-2 text-bio-gray-400 hover:text-bio-white transition-colors"
            >
                <ArrowLeft className="w-4 h-4" />
                {
                    /* Fallback text if not in translations, or use a generic 'Back' */
                }
                {
                    lang === "de"
                        ? "Zurück zur Übersicht"
                        : "Back to Festival Guide"
                }
            </a>
        </div>
    </div>

    <!-- Hero -->
    <section class="relative py-20 overflow-hidden">
        <div class="absolute inset-0 z-0">
            <img
                src={festival.image}
                alt={festival.name}
                class="w-full h-full object-cover opacity-30"
            />
            <div
                class="absolute inset-0 bg-gradient-to-t from-bio-black via-bio-black/80 to-bio-black/40"
            >
            </div>
        </div>
        <div class="container-wide relative z-10">
            <div class="max-w-3xl">
                <span class="badge-accent mb-4">{festival.type}</span>
                <h1 class="text-bio-white mb-4">{festival.name}</h1>

                <div class="flex flex-wrap gap-6 text-bio-gray-300 mb-6">
                    <div class="flex items-center gap-2">
                        <MapPin className="w-5 h-5 text-bio-accent" />
                        {festival.location}, {festival.country}
                    </div>
                    <div class="flex items-center gap-2">
                        <Calendar className="w-5 h-5 text-bio-accent" />
                        {festival.date}{
                            festival.dateEnd && ` – ${festival.dateEnd}`
                        }
                    </div>
                    <div class="flex items-center gap-2">
                        <Users className="w-5 h-5 text-bio-accent" />
                        {festival.capacity}
                        {tc.capacity}
                    </div>
                </div>

                {
                    festival.website && (
                        <a
                            href={festival.website}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="btn-primary inline-flex items-center gap-2"
                        >
                            <Globe className="w-4 h-4" />
                            {tf.officialWebsite}
                            <ExternalLink className="w-4 h-4" />
                        </a>
                    )
                }
            </div>
        </div>
    </section>

    <!-- Content -->
    <section class="section bg-bio-black">
        <div class="container-wide">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
                <!-- Main Content -->
                <div class="lg:col-span-2 space-y-12">
                    <!-- About -->
                    <div>
                        <h2 class="text-2xl font-bold text-bio-white mb-4">
                            {tf.aboutFestival}
                        </h2>
                        <p class="text-bio-gray-300 leading-relaxed text-lg">
                            {festival.description}
                        </p>
                    </div>

                    <!-- Lineup -->
                    <div>
                        <h2
                            class="text-2xl font-bold text-bio-white mb-6 flex items-center gap-3"
                        >
                            <Music className="w-6 h-6 text-bio-accent" />
                            {tf.artistsAt}
                            {festival.name}
                        </h2>
                        {
                            lineupArtists.length > 0 ? (
                                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                                    {lineupArtists.map((artist: any) => (
                                        <a
                                            href={`/${lang}/artists/${artist.slug}`}
                                            class="flex items-center gap-4 p-4 bg-bio-gray-900 border border-bio-gray-800 rounded-xl hover:border-bio-gray-700 transition-colors group"
                                        >
                                            <img
                                                src={artist.image}
                                                alt={artist.name}
                                                class="w-16 h-16 rounded-lg object-cover"
                                                loading="lazy"
                                            />
                                            <div>
                                                <h3 class="font-semibold text-bio-white group-hover:text-bio-accent transition-colors">
                                                    {artist.name}
                                                </h3>
                                                <p class="text-sm text-bio-gray-400">
                                                    {artist.location}
                                                </p>
                                                <div class="flex gap-2 mt-1">
                                                    {artist.genres
                                                        .slice(0, 2)
                                                        .map(
                                                            (genre: string) => (
                                                                <span class="text-xs text-bio-gray-500">
                                                                    {genre}
                                                                </span>
                                                            ),
                                                        )}
                                                </div>
                                            </div>
                                            {artist.isVerified && (
                                                <span class="ml-auto px-2 py-1 bg-bio-accent/10 rounded text-bio-accent text-xs">
                                                    {tc.verified}
                                                </span>
                                            )}
                                        </a>
                                    ))}
                                </div>
                            ) : (
                                <p class="text-bio-gray-400">{tf.noArtists}</p>
                            )
                        }
                    </div>

                    <!-- Stages -->
                    {
                        festival.stages && festival.stages.length > 0 && (
                            <div>
                                <h2 class="text-2xl font-bold text-bio-white mb-4">
                                    {tc.stages}
                                </h2>
                                <div class="flex flex-wrap gap-3">
                                    {festival.stages.map((stage: string) => (
                                        <span class="px-4 py-2 bg-bio-gray-900 border border-bio-gray-800 rounded-lg text-bio-gray-300">
                                            {stage}
                                        </span>
                                    ))}
                                </div>
                            </div>
                        )
                    }
                </div>

                <!-- Sidebar -->
                <div class="lg:col-span-1">
                    <div class="card sticky top-24 space-y-6">
                        <h3 class="text-lg font-semibold text-bio-white">
                            {tf.festivalInfo}
                        </h3>

                        <div class="space-y-4">
                            <div class="flex justify-between text-sm">
                                <span class="text-bio-gray-400"
                                    >{tc.location}</span
                                >
                                <span class="text-bio-white"
                                    >{festival.location}, {
                                        festival.country
                                    }</span
                                >
                            </div>
                            <div class="flex justify-between text-sm">
                                <span class="text-bio-gray-400">{tc.date}</span>
                                <span class="text-bio-white"
                                    >{festival.date}</span
                                >
                            </div>
                            <div class="flex justify-between text-sm">
                                <span class="text-bio-gray-400"
                                    >{tc.capacity}</span
                                >
                                <span class="text-bio-white"
                                    >{festival.capacity}</span
                                >
                            </div>
                            <div class="flex justify-between text-sm">
                                <span class="text-bio-gray-400">{tc.genre}</span
                                >
                                <span class="text-bio-white"
                                    >{festival.type}</span
                                >
                            </div>
                        </div>

                        {
                            festival.highlights &&
                                festival.highlights.length > 0 && (
                                    <div class="pt-4 border-t border-bio-gray-800">
                                        <h4 class="text-sm font-medium text-bio-gray-400 mb-3">
                                            {tc.highlights}
                                        </h4>
                                        <ul class="space-y-2">
                                            {festival.highlights.map(
                                                (highlight: string) => (
                                                    <li class="flex items-center gap-2 text-sm text-bio-gray-300">
                                                        <span class="w-1.5 h-1.5 rounded-full bg-bio-accent" />
                                                        {highlight}
                                                    </li>
                                                ),
                                            )}
                                        </ul>
                                    </div>
                                )
                        }

                        <div class="pt-4 border-t border-bio-gray-800">
                            <a
                                href={`/${lang}/contact?reason=festival-booking&festival=${encodeURIComponent(festival.name)}`}
                                class="btn-secondary w-full text-center"
                            >
                                {tf.bookArtists}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</BaseLayout>
