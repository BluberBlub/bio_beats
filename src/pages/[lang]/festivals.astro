---
export const prerender = true;
import BaseLayout from "../../layouts/BaseLayout.astro";
import { ArrowRight, Calendar, Users, Globe, Sparkles } from "lucide-react";
import FestivalDirectory from "../../components/react/FestivalDirectory";
import { festivals } from "../../data/festivals";
import { languages } from "../../i18n";
import { getTranslations } from "../../i18n";

// Dynamic routing for static site generation
export function getStaticPaths() {
    return Object.keys(languages).map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = getTranslations(lang as keyof typeof languages);
const tf = t.festivals;

// Prepare data for React component
const festivalsData = festivals.map((f) => ({
    id: f.id,
    name: f.name,
    slug: f.slug,
    location: f.location,
    country: f.country,
    date: f.date,
    type: f.type,
    image: f.image,
    capacity: f.capacity,
    artistSlugs: f.artistSlugs,
    coordinates: f.coordinates,
}));

const pageTitle = `${tf.heroTitle} â€” BIO BEATS`;
const pageDescription = tf.heroSubtitle;

const benefits = [
    {
        icon: "Calendar",
        title: tf.benefits.smartScheduling,
        description: tf.benefits.smartSchedulingDesc,
    },
    {
        icon: "Users",
        title: tf.benefits.verifiedTalent,
        description: tf.benefits.verifiedTalentDesc,
    },
    {
        icon: "Globe",
        title: tf.benefits.globalReach,
        description: tf.benefits.globalReachDesc,
    },
    {
        icon: "Sparkles",
        title: tf.benefits.curatedExperience,
        description: tf.benefits.curatedExperienceDesc,
    },
];
---

<BaseLayout title={pageTitle} description={pageDescription} lang={lang}>
    {/* Hero - User Focused */}
    <section class="py-16 bg-gradient-to-b from-bio-gray-900 to-bio-black">
        <div class="container-wide">
            <div class="max-w-3xl">
                <h1 class="text-bio-white mb-4">{tf.heroTitle}</h1>
                <p class="text-xl text-bio-gray-400 mb-8">
                    {tf.heroSubtitle}
                </p>
                <div class="flex flex-wrap gap-4">
                    <a href="#directory" class="btn-primary">
                        {tf.exploreFestivals}
                    </a>
                    <a
                        href={`/${lang === "de" ? "de/" : ""}contact`}
                        class="btn-secondary"
                    >
                        {tf.submitFestival}
                    </a>
                </div>
            </div>
        </div>
    </section>

    {/* Festival Directory / Grid */}
    <section id="directory" class="section bg-bio-black">
        <div class="container-wide">
            <FestivalDirectory
                client:load
                festivals={festivalsData}
                lang={lang}
            />
        </div>
    </section>

    {/* B2B Section - For Organizers */}
    <section class="section bg-bio-gray-900 border-t border-white/5">
        <div class="container-wide">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                <div>
                    <span class="text-bio-accent font-medium mb-2 block"
                        >{tf.forOrganizers}</span
                    >
                    <h2 class="text-bio-white mb-4">{tf.partnerTitle}</h2>
                    <p class="text-bio-gray-400 text-lg mb-8">
                        {tf.partnerDesc}
                    </p>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mb-8">
                        {
                            benefits.map((benefit) => (
                                <div class="flex flex-col gap-2">
                                    <div class="flex items-center gap-2 text-bio-white font-medium">
                                        {benefit.icon === "Calendar" && (
                                            <Calendar className="w-5 h-5 text-bio-accent" />
                                        )}
                                        {benefit.icon === "Users" && (
                                            <Users className="w-5 h-5 text-bio-accent" />
                                        )}
                                        {benefit.icon === "Globe" && (
                                            <Globe className="w-5 h-5 text-bio-accent" />
                                        )}
                                        {benefit.icon === "Sparkles" && (
                                            <Sparkles className="w-5 h-5 text-bio-accent" />
                                        )}
                                        <span>{benefit.title}</span>
                                    </div>
                                    <p class="text-sm text-bio-gray-400">
                                        {benefit.description}
                                    </p>
                                </div>
                            ))
                        }
                    </div>
                    <a
                        href={`/${lang === "de" ? "de/" : ""}join?role=booker`}
                        class="btn-primary inline-flex items-center gap-2"
                    >
                        {tf.becomePartner}
                        <ArrowRight className="w-4 h-4" />
                    </a>
                </div>
                <div class="relative hidden lg:block">
                    {/* Abstract visual or image could go here */}
                    <div
                        class="aspect-square rounded-2xl bg-gradient-to-br from-bio-accent/20 to-transparent border border-white/10 flex items-center justify-center"
                    >
                        <Calendar className="w-32 h-32 text-bio-accent/50" />
                    </div>
                </div>
            </div>
        </div>
    </section>
</BaseLayout>
