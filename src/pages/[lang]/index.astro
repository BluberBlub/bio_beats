---
export const prerender = true;
import BaseLayout from "../../layouts/BaseLayout.astro";
import Hero from "../../components/astro/Hero.astro";
import ArtistCard from "../../components/astro/ArtistCard.astro";
import { getFeaturedArtists } from "../../data/artists";
import { roleOptions } from "../../data/navigation";
import { ArrowRight, Zap, Shield, Globe, TrendingUp } from "lucide-react";
import { languages } from "../../i18n";
import { getTranslations } from "../../i18n";

// Dynamic routing for static site generation
export function getStaticPaths() {
    return Object.keys(languages).map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = getTranslations(lang as keyof typeof languages);
const featuredArtists = getFeaturedArtists();

const features = [
    {
        icon: "Zap",
        title: t.home.features.smartBooking, // Translations need to be added
        description: t.home.features.smartBookingDesc,
    },
    {
        icon: "Shield",
        title: t.home.features.verifiedNetwork,
        description: t.home.features.verifiedNetworkDesc,
    },
    {
        icon: "Globe",
        title: t.home.features.globalReach,
        description: t.home.features.globalReachDesc,
    },
    {
        icon: "TrendingUp",
        title: t.home.features.careerGrowth,
        description: t.home.features.careerGrowthDesc,
    },
];

const roleLabels: Record<string, string> = {
    artist: t.admin.roles.artist,
    performer: t.admin.roles.performer,
    creative: t.admin.roles.creative,
    manager: t.admin.roles.manager,
    label: t.admin.roles.label,
    booker: t.admin.roles.booker,
    provider: t.admin.roles.provider,
    guest: t.admin.roles.guest,
};
---

<BaseLayout
    title={`BIO BEATS â€” ${t.home.heroSubtitle.split(".")[0]}`}
    description={t.home.heroSubtitle}
    lang={lang}
>
    {/* Hero Section */}
    <Hero
        title="BIO BEATS"
        subtitle={t.home.heroSubtitle}
        primaryCta={{
            label: t.home.ctaPrimary,
            href: `/${lang === "de" ? "de/" : ""}join`,
        }}
        secondaryCta={{
            label: t.home.ctaSecondary,
            href: `/${lang === "de" ? "de/" : ""}about`,
        }}
    />

    {/* Features Section */}
    <section class="section bg-bio-black">
        <div class="container-wide">
            <div class="section-header">
                <h2 class="text-bio-white mb-4">{t.home.whyBioBeats}</h2>
                <p class="text-bio-gray-400 text-lg max-w-2xl mx-auto">
                    {t.home.whyBioBeatsDesc}
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                {
                    features.map((feature) => (
                        <div class="card-hover group">
                            <div class="w-12 h-12 rounded-lg bg-bio-accent/10 flex items-center justify-center mb-4 group-hover:bg-bio-accent/20 transition-colors">
                                {feature.icon === "Zap" && (
                                    <Zap className="w-6 h-6 text-bio-accent" />
                                )}
                                {feature.icon === "Shield" && (
                                    <Shield className="w-6 h-6 text-bio-accent" />
                                )}
                                {feature.icon === "Globe" && (
                                    <Globe className="w-6 h-6 text-bio-accent" />
                                )}
                                {feature.icon === "TrendingUp" && (
                                    <TrendingUp className="w-6 h-6 text-bio-accent" />
                                )}
                            </div>
                            <h3 class="text-xl font-semibold text-bio-white mb-2">
                                {feature.title}
                            </h3>
                            <p class="text-bio-gray-400">
                                {feature.description}
                            </p>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    {/* Featured Artists Section */}
    <section class="section bg-bio-gray-900">
        <div class="container-wide">
            <div class="flex items-end justify-between mb-12">
                <div>
                    <h2 class="text-bio-white mb-2">
                        {t.home.featuredArtists}
                    </h2>
                    <p class="text-bio-gray-400">
                        {t.home.featuredArtistsDesc}
                    </p>
                </div>
                <a
                    href={`/${lang === "de" ? "de/" : ""}artists`}
                    class="btn-ghost hidden md:inline-flex items-center gap-2"
                >
                    {t.home.viewAllArtists}
                    <ArrowRight className="w-4 h-4" />
                </a>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                {
                    featuredArtists.map((artist) => (
                        <ArtistCard artist={artist} lang={lang} />
                    ))
                }
            </div>

            <div class="mt-8 text-center md:hidden">
                <a
                    href={`/${lang === "de" ? "de/" : ""}artists`}
                    class="btn-secondary inline-flex items-center gap-2"
                >
                    {t.home.viewAllArtists}
                    <ArrowRight className="w-4 h-4" />
                </a>
            </div>
        </div>
    </section>

    {/* Role Selection CTA */}
    <section class="section bg-bio-black">
        <div class="container-wide">
            <div class="section-header">
                <h2 class="text-bio-white mb-4">{t.home.whoAreYou}</h2>
                <p class="text-bio-gray-400 text-lg max-w-2xl mx-auto">
                    {t.home.whoAreYouDesc}
                </p>
            </div>

            <div
                class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-4xl mx-auto"
            >
                {
                    roleOptions.slice(0, 4).map((role) => (
                        <a
                            href={`/${lang === "de" ? "de/" : ""}join?role=${role.id}`}
                            class="card-hover p-6 text-center group"
                        >
                            <h4 class="font-semibold text-bio-white group-hover:text-bio-accent transition-colors">
                                {roleLabels[role.id]}
                            </h4>
                        </a>
                    ))
                }
            </div>

            <div class="mt-8 text-center">
                <a
                    href={`/${lang === "de" ? "de/" : ""}join`}
                    class="btn-primary inline-flex items-center gap-2"
                >
                    {t.common.getStarted}
                    <ArrowRight className="w-4 h-4" />
                </a>
            </div>
        </div>
    </section>

    {/* CTA Section */}
    <section class="section bg-gradient-to-b from-bio-gray-900 to-bio-black">
        <div class="container-narrow text-center">
            <h2 class="text-bio-white mb-4">{t.home.readyToJoin}</h2>
            <p class="text-bio-gray-400 text-lg mb-8 max-w-xl mx-auto">
                {t.home.readyToJoinDesc}
            </p>
            <div
                class="flex flex-col sm:flex-row items-center justify-center gap-4"
            >
                <a
                    href={`/${lang === "de" ? "de/" : ""}join`}
                    class="btn-primary">{t.home.createProfile}</a
                >
                <a href={`/${lang === "de" ? "de/" : ""}faq`} class="btn-ghost"
                    >{t.nav.faq}</a
                >
            </div>
        </div>
    </section>
</BaseLayout>
