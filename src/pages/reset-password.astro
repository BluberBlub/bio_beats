---
import BaseLayout from "../layouts/BaseLayout.astro";
import { Lock, ArrowRight, CheckCircle } from "lucide-react";

const pageTitle = "Reset Password — BIO BEATS";
const pageDescription = "Create a new password for your account.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
    <section class="min-h-[80vh] flex items-center justify-center py-16">
        <div class="container-narrow">
            <div class="max-w-md mx-auto">
                <div class="text-center mb-8">
                    <div
                        class="w-16 h-16 mx-auto rounded-full bg-bio-accent/10 flex items-center justify-center mb-6"
                    >
                        <Lock className="w-8 h-8 text-bio-accent" />
                    </div>
                    <h1 class="text-3xl font-bold text-bio-white mb-2">
                        Create new password
                    </h1>
                    <p class="text-bio-gray-400">
                        Your new password must be different from previous
                        passwords.
                    </p>
                </div>

                <div class="card p-8">
                    <form class="space-y-6" id="reset-form">
                        <div>
                            <label
                                for="password"
                                class="block text-sm font-medium text-bio-gray-300 mb-2"
                            >
                                New Password
                            </label>
                            <input
                                type="password"
                                id="password"
                                minlength="8"
                                required
                                class="w-full px-4 py-3 bg-bio-gray-800 border border-bio-gray-700 rounded-lg text-bio-white placeholder-bio-gray-500 focus:border-bio-accent focus:ring-1 focus:ring-bio-accent outline-none transition-colors"
                                placeholder="••••••••"
                            />
                            <p class="mt-2 text-xs text-bio-gray-500">
                                Must be at least 8 characters
                            </p>
                        </div>

                        <div>
                            <label
                                for="confirm-password"
                                class="block text-sm font-medium text-bio-gray-300 mb-2"
                            >
                                Confirm New Password
                            </label>
                            <input
                                type="password"
                                id="confirm-password"
                                minlength="8"
                                required
                                class="w-full px-4 py-3 bg-bio-gray-800 border border-bio-gray-700 rounded-lg text-bio-white placeholder-bio-gray-500 focus:border-bio-accent focus:ring-1 focus:ring-bio-accent outline-none transition-colors"
                                placeholder="••••••••"
                            />
                        </div>

                        <!-- Password Requirements -->
                        <div class="p-4 bg-bio-gray-800/50 rounded-lg">
                            <p
                                class="text-sm font-medium text-bio-gray-300 mb-3"
                            >
                                Password requirements:
                            </p>
                            <ul class="space-y-2 text-sm">
                                <li
                                    class="flex items-center gap-2 text-bio-gray-400"
                                    id="req-length"
                                >
                                    <span
                                        class="w-4 h-4 rounded-full border border-bio-gray-600 flex items-center justify-center text-xs"
                                        >✓</span
                                    >
                                    At least 8 characters
                                </li>
                                <li
                                    class="flex items-center gap-2 text-bio-gray-400"
                                    id="req-match"
                                >
                                    <span
                                        class="w-4 h-4 rounded-full border border-bio-gray-600 flex items-center justify-center text-xs"
                                        >✓</span
                                    >
                                    Passwords match
                                </li>
                            </ul>
                        </div>

                        <button type="submit" class="btn-primary w-full">
                            Reset Password
                            <ArrowRight className="w-4 h-4 ml-2" />
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</BaseLayout>

<script>
    const form = document.getElementById("reset-form");
    const password = document.getElementById("password") as HTMLInputElement;
    const confirmPassword = document.getElementById(
        "confirm-password",
    ) as HTMLInputElement;
    const reqLength = document.getElementById("req-length");
    const reqMatch = document.getElementById("req-match");

    function updateRequirements() {
        // Check length
        if (password.value.length >= 8) {
            reqLength?.classList.add("text-green-400");
            reqLength?.classList.remove("text-bio-gray-400");
        } else {
            reqLength?.classList.remove("text-green-400");
            reqLength?.classList.add("text-bio-gray-400");
        }

        // Check match
        if (password.value && password.value === confirmPassword.value) {
            reqMatch?.classList.add("text-green-400");
            reqMatch?.classList.remove("text-bio-gray-400");
        } else {
            reqMatch?.classList.remove("text-green-400");
            reqMatch?.classList.add("text-bio-gray-400");
        }
    }

    password?.addEventListener("input", updateRequirements);
    confirmPassword?.addEventListener("input", updateRequirements);

    form?.addEventListener("submit", (e) => {
        e.preventDefault();

        if (password.value !== confirmPassword.value) {
            alert("Passwords do not match");
            return;
        }

        if (password.value.length < 8) {
            alert("Password must be at least 8 characters");
            return;
        }

        // Demo: redirect to success
        window.location.href = "/login?reset=success";
    });
</script>
