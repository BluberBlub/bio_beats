---
import BaseLayout from "../layouts/BaseLayout.astro";
import {
  ArrowRight,
  CheckCircle,
  Calendar,
  Users,
  Globe,
  Sparkles,
} from "lucide-react";
import FestivalDirectory from "../components/react/FestivalDirectory";
import { festivals } from "../data/festivals";

// Prepare data for React component
const festivalsData = festivals.map((f) => ({
  id: f.id,
  name: f.name,
  slug: f.slug,
  location: f.location,
  country: f.country,
  date: f.date,
  type: f.type,
  image: f.image,
  capacity: f.capacity,
  artistSlugs: f.artistSlugs,
}));

const pageTitle = "Festivals & Organizers â€” BIO BEATS";
const pageDescription =
  "Book artists for your festival or event through BIO BEATS verified network.";

const benefits = [
  {
    icon: "Calendar",
    title: "Lineup Planning",
    description:
      "Build your festival lineup with ease. Browse artists by genre, availability, and international reach.",
  },
  {
    icon: "Users",
    title: "Multi-Artist Booking",
    description:
      "Book multiple artists through one platform. Coordinate schedules and manage all communications centrally.",
  },
  {
    icon: "Globe",
    title: "International Network",
    description:
      "Access artists from around the world. Our verified network spans continents and genres.",
  },
  {
    icon: "Sparkles",
    title: "Discover New Talent",
    description:
      "Find emerging artists perfect for your event. Our curation helps you discover fresh sounds.",
  },
];
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <!-- Hero -->
  <section class="py-20 bg-gradient-to-b from-bio-gray-900 to-bio-black">
    <div class="container-wide">
      <div class="max-w-3xl">
        <span
          class="inline-block px-4 py-2 rounded-full bg-bio-accent/10 text-bio-accent text-sm font-medium mb-6"
        >
          For Festivals & Organizers
        </span>
        <h1 class="text-bio-white mb-6">Build unforgettable lineups.</h1>
        <p class="text-xl text-bio-gray-400 leading-relaxed mb-8">
          Access our global network of verified artists and streamline your
          festival booking process. From headliners to emerging talent.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a
            href="/join?role=booker"
            class="btn-primary inline-flex items-center gap-2"
          >
            Partner With Us
            <ArrowRight className="w-4 h-4" />
          </a>
          <a href="/artists" class="btn-secondary"> Explore Artists </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Festival Directory / Grid (Restored) -->
  <section class="section bg-bio-black">
    <div class="container-wide">
      <div class="section-header mb-12">
        <h2 class="text-bio-white">Featured Festivals</h2>
        <p class="text-bio-gray-400">Explore our partner festivals.</p>
      </div>
      <FestivalDirectory client:load festivals={festivalsData} />
    </div>
  </section>

  <!-- Benefits Grid -->
  <section class="section bg-bio-gray-900 border-t border-white/5">
    <div class="container-wide">
      <div class="section-header">
        <h2 class="text-bio-white mb-4">Why festivals choose BIO BEATS</h2>
        <p class="text-bio-gray-400 text-lg max-w-2xl mx-auto">
          Streamlined booking, verified talent, and a platform built for
          large-scale events.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {
          benefits.map((benefit) => (
            <div class="card-hover">
              <div class="w-12 h-12 rounded-lg bg-bio-accent/10 flex items-center justify-center mb-4">
                {benefit.icon === "Calendar" && (
                  <Calendar className="w-6 h-6 text-bio-accent" />
                )}
                {benefit.icon === "Users" && (
                  <Users className="w-6 h-6 text-bio-accent" />
                )}
                {benefit.icon === "Globe" && (
                  <Globe className="w-6 h-6 text-bio-accent" />
                )}
                {benefit.icon === "Sparkles" && (
                  <Sparkles className="w-6 h-6 text-bio-accent" />
                )}
              </div>
              <h3 class="text-xl font-semibold text-bio-white mb-2">
                {benefit.title}
              </h3>
              <p class="text-bio-gray-400">{benefit.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Festival Partnership -->
  <section class="section bg-bio-gray-900">
    <div class="container-narrow text-center">
      <h2 class="text-bio-white mb-6">Become a Festival Partner</h2>
      <p class="text-bio-gray-400 text-lg mb-8 max-w-2xl mx-auto">
        Festival partners get dedicated support, priority access to artists, and
        custom solutions for large-scale bookings.
      </p>
      <div class="flex flex-col items-center gap-4">
        <div class="flex flex-wrap justify-center gap-4 text-bio-gray-300">
          <div class="flex items-center gap-2">
            <CheckCircle className="w-5 h-5 text-bio-accent" />
            <span>Dedicated account manager</span>
          </div>
          <div class="flex items-center gap-2">
            <CheckCircle className="w-5 h-5 text-bio-accent" />
            <span>Bulk booking tools</span>
          </div>
          <div class="flex items-center gap-2">
            <CheckCircle className="w-5 h-5 text-bio-accent" />
            <span>Custom integrations</span>
          </div>
        </div>
        <a href="/contact?reason=festival" class="btn-primary mt-4">
          Get in Touch
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
