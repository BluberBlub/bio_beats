---
import BaseLayout from "../layouts/BaseLayout.astro";
import { CheckCircle, ArrowRight } from "lucide-react";

const pageTitle = "Password Reset Sent â€” BIO BEATS";
const pageDescription = "Check your email for password reset instructions.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
    <section class="min-h-[80vh] flex items-center justify-center py-16">
        <div class="container-narrow">
            <div class="max-w-lg mx-auto text-center">
                <div
                    class="w-20 h-20 mx-auto rounded-full bg-bio-accent/20 flex items-center justify-center mb-8"
                >
                    <CheckCircle className="w-10 h-10 text-bio-accent" />
                </div>

                <h1 class="text-3xl font-bold text-bio-white mb-4">
                    Check your email
                </h1>

                <p class="text-bio-gray-400 text-lg mb-8">
                    If an account exists with that email address, we've sent
                    password reset instructions. The link will expire in 1 hour.
                </p>

                <div class="card p-6 mb-8 text-left">
                    <h3 class="font-semibold text-bio-white mb-3">
                        What to do next:
                    </h3>
                    <ol class="space-y-3 text-bio-gray-400">
                        <li class="flex gap-3">
                            <span
                                class="w-6 h-6 rounded-full bg-bio-accent/20 text-bio-accent text-sm flex items-center justify-center flex-shrink-0"
                                >1</span
                            >
                            <span>Check your email inbox (and spam folder)</span
                            >
                        </li>
                        <li class="flex gap-3">
                            <span
                                class="w-6 h-6 rounded-full bg-bio-accent/20 text-bio-accent text-sm flex items-center justify-center flex-shrink-0"
                                >2</span
                            >
                            <span>Click the reset link in the email</span>
                        </li>
                        <li class="flex gap-3">
                            <span
                                class="w-6 h-6 rounded-full bg-bio-accent/20 text-bio-accent text-sm flex items-center justify-center flex-shrink-0"
                                >3</span
                            >
                            <span>Create a new secure password</span>
                        </li>
                    </ol>
                </div>

                <div class="space-y-4">
                    <a
                        href="/login"
                        class="btn-primary w-full inline-flex items-center justify-center gap-2"
                    >
                        Back to Login
                        <ArrowRight className="w-4 h-4" />
                    </a>

                    <a
                        href="/forgot-password"
                        class="text-bio-accent hover:underline text-sm"
                    >
                        Try a different email
                    </a>
                </div>
            </div>
        </div>
    </section>
</BaseLayout>
