---
import BaseLayout from '../layouts/BaseLayout.astro';
import { ArrowRight, Briefcase, Users, Calendar, BarChart3, Shield, Zap } from 'lucide-react';

const pageTitle = 'For Managers â€” BIO BEATS';
const pageDescription = 'Manage your artist roster, handle bookings, and grow your agency with BIO BEATS.';

const features = [
  {
    icon: 'Users',
    title: 'Roster Management',
    description: 'Manage multiple artists from one dashboard. Track bookings, availability, and performance across your entire roster.'
  },
  {
    icon: 'Calendar',
    title: 'Booking Coordination',
    description: 'Centralized booking management. Handle inquiries, negotiations, and scheduling for all your artists.'
  },
  {
    icon: 'BarChart3',
    title: 'Analytics & Reporting',
    description: 'Track revenue, booking trends, and artist performance with comprehensive analytics and reporting tools.'
  },
  {
    icon: 'Shield',
    title: 'Verified Agency Status',
    description: 'Build trust with verified agency status. Bookers know they\'re working with professional representation.'
  }
];
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <!-- Hero -->
  <section class="py-20 bg-gradient-to-b from-bio-gray-900 to-bio-black">
    <div class="container-wide">
      <div class="max-w-3xl">
        <span class="inline-block px-4 py-2 rounded-full bg-bio-accent/10 text-bio-accent text-sm font-medium mb-6">
          For Managers & Agencies
        </span>
        <h1 class="text-bio-white mb-6">
          Grow your roster. Scale your agency.
        </h1>
        <p class="text-xl text-bio-gray-400 leading-relaxed mb-8">
          BIO BEATS gives managers the tools to efficiently represent artists, handle bookings, and build sustainable agencies in electronic music.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="/join?role=manager" class="btn-primary inline-flex items-center gap-2">
            Create Manager Account
            <ArrowRight className="w-4 h-4" />
          </a>
          <a href="/about" class="btn-secondary">
            Learn More
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="section bg-bio-black">
    <div class="container-wide">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {features.map((feature) => (
          <div class="card-hover flex gap-6">
            <div class="w-14 h-14 rounded-lg bg-bio-accent/10 flex items-center justify-center flex-shrink-0">
              {feature.icon === 'Users' && <Users className="w-7 h-7 text-bio-accent" />}
              {feature.icon === 'Calendar' && <Calendar className="w-7 h-7 text-bio-accent" />}
              {feature.icon === 'BarChart3' && <BarChart3 className="w-7 h-7 text-bio-accent" />}
              {feature.icon === 'Shield' && <Shield className="w-7 h-7 text-bio-accent" />}
            </div>
            <div>
              <h3 class="text-xl font-semibold text-bio-white mb-2">{feature.title}</h3>
              <p class="text-bio-gray-400">{feature.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 bg-bio-gray-900">
    <div class="container-narrow text-center">
      <div class="flex items-center justify-center gap-2 mb-6">
        <Briefcase className="w-8 h-8 text-bio-accent" />
      </div>
      <h2 class="text-2xl md:text-3xl font-bold text-bio-white mb-4">
        Ready to streamline your management?
      </h2>
      <p class="text-bio-gray-400 mb-8">
        Join BIO BEATS and give your artists the professional platform they deserve.
      </p>
      <a href="/join?role=manager" class="btn-primary">
        Get Started as a Manager
      </a>
    </div>
  </section>
</BaseLayout>
