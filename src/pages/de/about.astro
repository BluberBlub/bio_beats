---
export const prerender = true;
import BaseLayout from "../../layouts/BaseLayout.astro";
import {
    ArrowRight,
    CheckCircle,
    Users,
    Calendar,
    Shield,
    TrendingUp,
} from "lucide-react";

const pageTitle = "Über BIO BEATS — Management & Booking Plattform";
const pageDescription =
    "Erfahre mehr über BIO BEATS, die Management- und Booking-Plattform für elektronische Kultur.";

const values = [
    {
        icon: "Users",
        title: "Community First",
        description:
            "Von und für die elektronische Musik-Community gebaut. Wir verstehen die Branche, weil wir Teil davon sind.",
    },
    {
        icon: "Shield",
        title: "Vertrauen & Transparenz",
        description:
            "Verifizierte Profile, klare Prozesse, ehrliche Kommunikation. Keine versteckten Gebühren, keine Überraschungen.",
    },
    {
        icon: "TrendingUp",
        title: "Nachhaltige Karrieren",
        description:
            "Wir fokussieren auf langfristigen Erfolg, nicht auf schnelle Gewinne. Infrastruktur für dauerhafte Karrieren.",
    },
    {
        icon: "Calendar",
        title: "Professionelle Infrastruktur",
        description:
            "Von Bookings bis Finanzen – wir bieten die Tools, die Profis brauchen, um sich auf ihre Kunst zu konzentrieren.",
    },
];
---

<BaseLayout title={pageTitle} description={pageDescription}>
    <!-- Hero -->
    <section class="py-20 bg-gradient-to-b from-bio-gray-900 to-bio-black">
        <div class="container-wide">
            <div class="max-w-3xl">
                <h1 class="text-bio-white mb-6">
                    Wir bauen die Infrastruktur, die elektronische Musik
                    verdient.
                </h1>
                <p class="text-xl text-bio-gray-400 leading-relaxed">
                    BIO BEATS ist mehr als eine Booking-Plattform. Es ist ein
                    professionelles Ökosystem, das Chaos reduziert, Klarheit
                    schafft und nachhaltige Karrieren in der elektronischen
                    Musik ermöglicht.
                </p>
            </div>
        </div>
    </section>

    <!-- Mission -->
    <section class="section bg-bio-black">
        <div class="container-wide">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
                <div>
                    <span
                        class="text-bio-accent text-sm font-semibold uppercase tracking-wider"
                        >Unsere Mission</span
                    >
                    <h2 class="text-bio-white mt-4 mb-6">
                        Weniger Chaos. Mehr Fokus. Mehr Bookings.
                    </h2>
                    <p class="text-bio-gray-400 text-lg leading-relaxed mb-6">
                        Die Branche der elektronischen Musik ist fragmentiert.
                        Künstler kämpfen mit Bookings, Booker haben
                        Schwierigkeiten, zuverlässige Acts zu finden, und alle
                        verschwenden Zeit mit Bürokratie statt zu kreieren.
                    </p>
                    <p class="text-bio-gray-400 text-lg leading-relaxed mb-8">
                        Das ändern wir. BIO BEATS verbindet Künstler, Labels,
                        Booker, Festivals und Dienstleister in einem
                        strukturierten, professionellen Ökosystem.
                    </p>
                    <div class="space-y-3">
                        <div class="flex items-center gap-3 text-bio-gray-300">
                            <CheckCircle
                                className="w-5 h-5 text-bio-accent flex-shrink-0"
                            />
                            <span>Professionelle Booking-Infrastruktur</span>
                        </div>
                        <div class="flex items-center gap-3 text-bio-gray-300">
                            <CheckCircle
                                className="w-5 h-5 text-bio-accent flex-shrink-0"
                            />
                            <span>Verifiziertes Netzwerk von Profis</span>
                        </div>
                        <div class="flex items-center gap-3 text-bio-gray-300">
                            <CheckCircle
                                className="w-5 h-5 text-bio-accent flex-shrink-0"
                            />
                            <span>Finanz-Tools und Reporting</span>
                        </div>
                        <div class="flex items-center gap-3 text-bio-gray-300">
                            <CheckCircle
                                className="w-5 h-5 text-bio-accent flex-shrink-0"
                            />
                            <span>Modulare Services für Wachstum</span>
                        </div>
                    </div>
                </div>
                <div class="relative">
                    <div
                        class="aspect-square rounded-2xl bg-bio-gray-800 overflow-hidden"
                    >
                        <div
                            class="absolute inset-0 bg-gradient-to-br from-bio-accent/20 to-transparent"
                        >
                        </div>
                        <div
                            class="absolute inset-0 flex items-center justify-center"
                        >
                            <div class="text-center">
                                <div
                                    class="text-6xl font-bold text-bio-white mb-2"
                                >
                                    B.E.A.T.S.
                                </div>
                                <div class="text-bio-gray-400">
                                    Bringing Electronic Artists To Success
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Values -->
    <section class="section bg-bio-gray-900">
        <div class="container-wide">
            <div class="section-header">
                <h2 class="text-bio-white mb-4">Unsere Werte</h2>
                <p class="text-bio-gray-400 text-lg max-w-2xl mx-auto">
                    Die Prinzipien, die alles leiten, was wir bauen.
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                {
                    values.map((value) => (
                        <div class="card">
                            <div class="w-12 h-12 rounded-lg bg-bio-accent/10 flex items-center justify-center mb-4">
                                {value.icon === "Users" && (
                                    <Users className="w-6 h-6 text-bio-accent" />
                                )}
                                {value.icon === "Shield" && (
                                    <Shield className="w-6 h-6 text-bio-accent" />
                                )}
                                {value.icon === "TrendingUp" && (
                                    <TrendingUp className="w-6 h-6 text-bio-accent" />
                                )}
                                {value.icon === "Calendar" && (
                                    <Calendar className="w-6 h-6 text-bio-accent" />
                                )}
                            </div>
                            <h3 class="text-xl font-semibold text-bio-white mb-2">
                                {value.title}
                            </h3>
                            <p class="text-bio-gray-400">{value.description}</p>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- CTA -->
    <section class="section bg-bio-black">
        <div class="container-narrow text-center">
            <h2 class="text-bio-white mb-4">Bereit beizutreten?</h2>
            <p class="text-bio-gray-400 text-lg mb-8 max-w-xl mx-auto">
                Werde Teil der Zukunft des Managements elektronischer Musik.
                Tritt BIO BEATS noch heute bei.
            </p>
            <a
                href="/de/join"
                class="btn-primary inline-flex items-center gap-2"
            >
                Jetzt starten
                <ArrowRight className="w-4 h-4" />
            </a>
        </div>
    </section>
</BaseLayout>
