---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { CheckCircle, ArrowRight } from "lucide-react";

const pageTitle = "E-Mail gesendet — BIO BEATS";
const pageDescription =
    "Prüfe deine E-Mails für Anweisungen zum Zurücksetzen des Passworts.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
    <section class="min-h-[80vh] flex items-center justify-center py-16">
        <div class="container-narrow">
            <div class="max-w-lg mx-auto text-center">
                <div
                    class="w-20 h-20 mx-auto rounded-full bg-bio-accent/20 flex items-center justify-center mb-8"
                >
                    <CheckCircle className="w-10 h-10 text-bio-accent" />
                </div>

                <h1 class="text-3xl font-bold text-bio-white mb-4">
                    E-Mail prüfen
                </h1>

                <p class="text-bio-gray-400 text-lg mb-8">
                    Wenn ein Konto mit dieser E-Mail-Adresse existiert, haben
                    wir Anweisungen zum Zurücksetzen gesendet. Der Link ist 1
                    Stunde gültig.
                </p>

                <div class="card p-6 mb-8 text-left">
                    <h3 class="font-semibold text-bio-white mb-3">
                        Nächste Schritte:
                    </h3>
                    <ol class="space-y-3 text-bio-gray-400">
                        <li class="flex gap-3">
                            <span
                                class="w-6 h-6 rounded-full bg-bio-accent/20 text-bio-accent text-sm flex items-center justify-center flex-shrink-0"
                                >1</span
                            >
                            <span
                                >E-Mail-Posteingang prüfen (auch Spam-Ordner)</span
                            >
                        </li>
                        <li class="flex gap-3">
                            <span
                                class="w-6 h-6 rounded-full bg-bio-accent/20 text-bio-accent text-sm flex items-center justify-center flex-shrink-0"
                                >2</span
                            >
                            <span>Klicke auf den Reset-Link in der E-Mail</span>
                        </li>
                        <li class="flex gap-3">
                            <span
                                class="w-6 h-6 rounded-full bg-bio-accent/20 text-bio-accent text-sm flex items-center justify-center flex-shrink-0"
                                >3</span
                            >
                            <span>Erstelle ein neues, sicheres Passwort</span>
                        </li>
                    </ol>
                </div>

                <div class="space-y-4">
                    <a
                        href="/de/login"
                        class="btn-primary w-full inline-flex items-center justify-center gap-2"
                    >
                        Zurück zum Login
                        <ArrowRight className="w-4 h-4" />
                    </a>

                    <a
                        href="/de/forgot-password"
                        class="text-bio-accent hover:underline text-sm"
                    >
                        Andere E-Mail-Adresse versuchen?
                    </a>
                </div>
            </div>
        </div>
    </section>
</BaseLayout>
