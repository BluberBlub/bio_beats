---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { ArrowLeft, Mail } from "lucide-react";

const pageTitle = "Passwort vergessen — BIO BEATS";
const pageDescription = "Setze dein BIO BEATS Passwort zurück.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
    <section class="min-h-[80vh] flex items-center justify-center py-16">
        <div class="container-narrow">
            <div class="max-w-md mx-auto">
                <!-- Back Link -->
                <a
                    href="/de/login"
                    class="inline-flex items-center gap-2 text-bio-gray-400 hover:text-bio-white transition-colors mb-8"
                >
                    <ArrowLeft className="w-4 h-4" />
                    Zurück zum Login
                </a>

                <div class="text-center mb-8">
                    <div
                        class="w-16 h-16 mx-auto rounded-full bg-bio-accent/10 flex items-center justify-center mb-6"
                    >
                        <Mail className="w-8 h-8 text-bio-accent" />
                    </div>
                    <h1 class="text-3xl font-bold text-bio-white mb-2">
                        Passwort vergessen?
                    </h1>
                    <p class="text-bio-gray-400">
                        Kein Problem. Gib deine E-Mail-Adresse ein und wir
                        senden dir einen Link zum Zurücksetzen deines Passworts.
                    </p>
                </div>

                <div class="card p-8">
                    <form class="space-y-6" action="/de/password-reset-sent">
                        <div>
                            <label
                                for="email"
                                class="block text-sm font-medium text-bio-gray-300 mb-2"
                            >
                                E-Mail-Adresse
                            </label>
                            <input
                                type="email"
                                id="email"
                                class="w-full px-4 py-3 bg-bio-gray-800 border border-bio-gray-700 rounded-lg text-bio-white placeholder-bio-gray-500 focus:border-bio-accent focus:ring-1 focus:ring-bio-accent outline-none transition-colors"
                                placeholder="deine@email.com"
                                required
                            />
                        </div>

                        <button type="submit" class="btn-primary w-full">
                            Reset-Link senden
                        </button>
                    </form>
                </div>

                <p class="mt-6 text-center text-sm text-bio-gray-500">
                    Passwort wieder eingefallen?{" "}
                    <a href="/de/login" class="text-bio-accent hover:underline">
                        Hier einloggen
                    </a>
                </p>
            </div>
        </div>
    </section>
</BaseLayout>
