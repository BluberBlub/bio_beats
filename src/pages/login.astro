---
import BaseLayout from "../layouts/BaseLayout.astro";
import AuthForm from "../components/react/AuthForm";

const pageTitle = "Login â€” BIO BEATS";
const pageDescription = "Login to your BIO BEATS account.";

// Check for success params
const url = new URL(Astro.request.url);
const resetSuccess = url.searchParams.get("reset") === "success";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <section class="min-h-[80vh] flex items-center justify-center py-16">
    <div class="container-narrow">
      <div class="max-w-md mx-auto">
        <div class="text-center mb-8">
          <a href="/" class="inline-flex items-center gap-2">
            <img src="/logo.svg" alt="BIO BEATS" class="h-8 w-8" />
            <span class="text-2xl font-bold text-bio-white">BIO BEATS</span>
          </a>
          <h1 class="text-3xl font-bold text-bio-white mt-6 mb-2">
            Welcome back
          </h1>
          <p class="text-bio-gray-400">Login to your account</p>
        </div>

        {
          resetSuccess && (
            <div class="mb-6 p-4 rounded-lg bg-green-500/10 border border-green-500/30">
              <p class="text-green-400 text-sm text-center">
                Password reset successful! You can now login with your new
                password.
              </p>
            </div>
          )
        }

        <div class="card p-8">
          <AuthForm client:load mode="login" />

          <div class="mt-6 pt-6 border-t border-bio-gray-800 text-center">
            <p class="text-sm text-bio-gray-400">
              Don't have an account?{" "}
              <a href="/join" class="text-bio-accent hover:underline">
                Create one
              </a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
