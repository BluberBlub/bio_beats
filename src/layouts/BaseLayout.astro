---
interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = "BIO BEATS is the management and booking platform for electronic culture. We connect artists, labels, bookers, and festivals.",
  image = "/og-image.png",
} = Astro.props;

import "../styles/global.css";
import Header from "../components/astro/Header.astro";
import Footer from "../components/astro/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="BIO BEATS" />

    <!-- Canonical URL -->
    <link rel="canonical" href={Astro.url.href} />

    <!-- Performance: DNS Prefetch -->
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://fonts.gstatic.com" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="BIO BEATS" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta
      property="og:image"
      content={new URL(image, Astro.site || "https://biobeats.io").href}
    />
    <meta property="og:url" content={Astro.url.href} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@biobeats" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta
      name="twitter:image"
      content={new URL(image, Astro.site || "https://biobeats.io").href}
    />

    <!-- Fonts: Preconnect & Load with display=swap -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
        rel="stylesheet"
      />
    </noscript>

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- Theme Color -->
    <meta name="theme-color" content="#0a0a0a" />
    <meta name="msapplication-TileColor" content="#ff0700" />

    <!-- JSON-LD Structured Data -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Organization",
        name: "BIO BEATS",
        url: "https://biobeats.io",
        logo: "https://biobeats.io/logo.svg",
        description:
          "Management and booking platform for electronic music culture",
        sameAs: [
          "https://instagram.com/biobeats",
          "https://twitter.com/biobeats",
        ],
      })}
    />
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "WebSite",
        name: "BIO BEATS",
        url: "https://biobeats.io",
        potentialAction: {
          "@type": "SearchAction",
          target: "https://biobeats.io/artists?q={search_term_string}",
          "query-input": "required name=search_term_string",
        },
      })}
    />

    <title>{title}</title>

    <!-- Critical CSS Inline -->
    <style is:inline>
      body {
        background-color: #0a0a0a;
        color: #fafafa;
      }
      .loading {
        opacity: 0;
      }
      .loaded {
        opacity: 1;
        transition: opacity 0.3s;
      }
    </style>
  </head>
  <body class="min-h-screen flex flex-col">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />

    <!-- Performance: Defer non-critical JS -->
    <script is:inline>
      // Mark page as loaded for animations
      document.addEventListener("DOMContentLoaded", () => {
        document.body.classList.add("loaded");
      });
    </script>
  </body>
</html>
