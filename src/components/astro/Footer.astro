---
import { footerNavigation } from "../../data/navigation";
import { getLangFromUrl } from "../../i18n";
import LanguageSwitcher from "../react/LanguageSwitcher";

const url = new URL(Astro.request.url);
const lang = getLangFromUrl(url);
const currentPath = url.pathname;

// Localized labels
const labels = {
  en: {
    tagline:
      "The management and booking platform for electronic culture. Less chaos. More focus. More bookings.",
    platform: "Platform",
    company: "Company",
    legal: "Legal",
    rights: "All rights reserved.",
    madeWith: "Made with focus for the electronic music community.",
    language: "Language",
  },
  de: {
    tagline:
      "Die Management- und Booking-Plattform für elektronische Kultur. Weniger Chaos. Mehr Fokus. Mehr Bookings.",
    platform: "Plattform",
    company: "Unternehmen",
    legal: "Rechtliches",
    rights: "Alle Rechte vorbehalten.",
    madeWith: "Mit Fokus für die elektronische Musik-Community.",
    language: "Sprache",
  },
};

const t = labels[lang];
---

<footer class="bg-bio-gray-900 border-t border-bio-gray-800">
  <div class="container-wide py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-12">
      <!-- Brand -->
      <div class="lg:col-span-2">
        <a href={lang === "de" ? "/de" : "/en"} class="flex items-center gap-3">
          <img src="/logo.svg" alt="BIO BEATS" class="h-8 w-8" />
          <span class="text-2xl font-bold text-bio-white">BIO BEATS</span>
        </a>
        <p class="mt-4 text-bio-gray-400 text-sm leading-relaxed">
          {t.tagline}
        </p>
        <div class="flex items-center gap-4 mt-6">
          <a
            href="https://instagram.com/biobeats"
            target="_blank"
            rel="noopener"
            class="text-bio-gray-400 hover:text-bio-white transition-colors"
            aria-label="Instagram"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
              ><path
                d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
              ></path></svg
            >
          </a>
          <a
            href="https://soundcloud.com/biobeats"
            target="_blank"
            rel="noopener"
            class="text-bio-gray-400 hover:text-bio-white transition-colors"
            aria-label="SoundCloud"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
              ><path
                d="M1.175 12.225c-.051 0-.094.046-.101.1l-.233 2.154.233 2.105c.007.058.05.098.101.098.05 0 .09-.04.099-.098l.255-2.105-.27-2.154c-.009-.06-.052-.1-.084-.1zm-.899 1.755c-.009.056-.047.094-.094.094s-.089-.038-.093-.094l-.178-1.502.178-1.471c.004-.054.046-.094.093-.094s.085.04.094.094l.209 1.471-.209 1.502zm1.86-2.235c-.053 0-.097.044-.104.098l-.209 2.332.209 2.244c.007.054.051.102.104.102.05 0 .093-.048.101-.102l.255-2.244-.255-2.332c-.008-.054-.051-.098-.101-.098zm6.236 1.106c-.387 0-.756.08-1.091.223-.134-1.515-1.399-2.706-2.948-2.706-.384 0-.754.078-1.1.219-.121.049-.153.099-.156.197v5.334c.003.1.08.182.181.189h5.114c1.049 0 1.9-.851 1.9-1.899 0-1.05-.851-1.557-1.9-1.557z"
              ></path></svg
            >
          </a>
          <a
            href="https://linkedin.com/company/biobeats"
            target="_blank"
            rel="noopener"
            class="text-bio-gray-400 hover:text-bio-white transition-colors"
            aria-label="LinkedIn"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
              ><path
                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
              ></path></svg
            >
          </a>
        </div>
      </div>

      <!-- Platform Links -->
      <div>
        <h4
          class="text-sm font-semibold text-bio-white mb-4 uppercase tracking-wider"
        >
          {t.platform}
        </h4>
        <ul class="space-y-3">
          {
            footerNavigation.platform.map((item) => (
              <li>
                <a
                  href={lang === "de" ? `/de${item.href}` : `/en${item.href}`}
                  class="text-sm text-bio-gray-400 hover:text-bio-white transition-colors"
                >
                  {item.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Company Links -->
      <div>
        <h4
          class="text-sm font-semibold text-bio-white mb-4 uppercase tracking-wider"
        >
          {t.company}
        </h4>
        <ul class="space-y-3">
          {
            footerNavigation.company.map((item) => (
              <li>
                <a
                  href={lang === "de" ? `/de${item.href}` : `/en${item.href}`}
                  class="text-sm text-bio-gray-400 hover:text-bio-white transition-colors"
                >
                  {item.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Legal & Language -->
      <div>
        <h4
          class="text-sm font-semibold text-bio-white mb-4 uppercase tracking-wider"
        >
          {t.legal}
        </h4>
        <ul class="space-y-3">
          {
            footerNavigation.legal.map((item) => (
              <li>
                <a
                  href={lang === "de" ? `/de${item.href}` : `/en${item.href}`}
                  class="text-sm text-bio-gray-400 hover:text-bio-white transition-colors"
                >
                  {item.label}
                </a>
              </li>
            ))
          }
        </ul>

        <!-- Language Switcher -->
        <div class="mt-6 pt-6 border-t border-bio-gray-800">
          <h4
            class="text-sm font-semibold text-bio-white mb-3 uppercase tracking-wider"
          >
            {t.language}
          </h4>
          <LanguageSwitcher
            client:load
            currentLang={lang}
            currentPath={currentPath}
          />
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div
      class="mt-12 pt-8 border-t border-bio-gray-800 flex flex-col md:flex-row justify-between items-center gap-4"
    >
      <p class="text-sm text-bio-gray-500">
        © {new Date().getFullYear()} BIO BEATS. {t.rights}
      </p>
      <p class="text-sm text-bio-gray-500">
        {t.madeWith}
      </p>
    </div>
  </div>
</footer>
