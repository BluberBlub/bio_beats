      </div>

      <!-- Platform Links -->
      <div>
        <h4 class="text-sm font-semibold text-bio-white mb-4 uppercase tracking-wider">Platform</h4>
        <ul class="space-y-3">
          {footerNavigation.platform.map((item) => (
            <li>
              <a href={item.href} class="text-sm text-bio-gray-400 hover:text-bio-white transition-colors">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company Links -->
      <div>
        <h4 class="text-sm font-semibold text-bio-white mb-4 uppercase tracking-wider">Company</h4>
        <ul class="space-y-3">
          {footerNavigation.company.map((item) => (
            <li>
              <a href={item.href} class="text-sm text-bio-gray-400 hover:text-bio-white transition-colors">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal Links -->
      <div>
        <h4 class="text-sm font-semibold text-bio-white mb-4 uppercase tracking-wider">Legal</h4>
        <ul class="space-y-3">
          {footerNavigation.legal.map((item) => (
            <li>
              <a href={item.href} class="text-sm text-bio-gray-400 hover:text-bio-white transition-colors">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-bio-gray-800 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-sm text-bio-gray-500">
        Â© {new Date().getFullYear()} BIO BEATS. All rights reserved.
      </p>
      <p class="text-sm text-bio-gray-500">
        Made with focus for the electronic music community.
      </p>
    </div>
  </div>
</footer>
