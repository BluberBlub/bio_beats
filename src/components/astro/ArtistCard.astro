---
import type { Artist } from "../../types/types";
import { BadgeCheck, MapPin } from "lucide-react";

interface Props {
  artist: Artist;
}

const { artist } = Astro.props;

const availabilityColors = {
  available: "bg-green-500/20 text-green-400",
  limited: "bg-yellow-500/20 text-yellow-400",
  unavailable: "bg-red-500/20 text-red-400",
};

const typeLabels = {
  dj: "DJ",
  live: "Live Act",
  hybrid: "Hybrid",
};
---

<a
  href={`/artists/${artist.slug}`}
  class="group block card-hover overflow-hidden"
>
  <!-- Image -->
  <div class="aspect-square bg-bio-gray-800 relative overflow-hidden">
    <div
      class="absolute inset-0 bg-gradient-to-t from-bio-black/90 via-bio-black/40 to-transparent z-10"
    >
    </div>
    <img
      src={artist.image}
      alt={artist.name}
      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
      loading="lazy"
    />

    <!-- Availability Badge -->
    <span
      class={`absolute top-4 right-4 px-2 py-1 rounded-full text-xs font-medium ${availabilityColors[artist.availability]}`}
    >
      {
        artist.availability.charAt(0).toUpperCase() +
          artist.availability.slice(1)
      }
    </span>

    <!-- Type Badge -->
    <span class="absolute bottom-4 left-4 z-20 badge">
      {typeLabels[artist.type]}
    </span>
  </div>

  <!-- Content -->
  <div class="p-5">
    <div class="flex items-center gap-2 mb-2">
      <h3
        class="text-lg font-semibold text-bio-white group-hover:text-bio-accent transition-colors"
      >
        {artist.name}
      </h3>
      {
        artist.isVerified && (
          <BadgeCheck className="w-4 h-4 text-bio-accent flex-shrink-0" />
        )
      }
    </div>

    <div class="flex items-center gap-1 text-sm text-bio-gray-400 mb-3">
      <MapPin className="w-3 h-3" />
      {artist.location}
    </div>

    <p class="text-sm text-bio-gray-500 line-clamp-2 mb-3">
      {artist.shortBio}
    </p>

    <!-- Genres & BPM -->
    <div class="flex flex-wrap gap-2">
      {
        artist.genres
          .slice(0, 2)
          .map((genre) => (
            <span class="text-xs px-2 py-1 rounded-full bg-bio-gray-800 text-bio-gray-400">
              {genre}
            </span>
          ))
      }
      <span
        class="text-xs px-2 py-1 rounded-full bg-bio-gray-800 text-bio-gray-400"
      >
        {artist.bpmRange.min}â€“{artist.bpmRange.max} BPM
      </span>
    </div>
  </div>
</a>
