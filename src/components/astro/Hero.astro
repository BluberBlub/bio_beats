---
interface Props {
  title: string;
  subtitle?: string;
  primaryCta?: {
    label: string;
    href: string;
  };
  secondaryCta?: {
    label: string;
    href: string;
  };
}

const { title, subtitle, primaryCta, secondaryCta } = Astro.props;
---

<section
  class="relative min-h-[80vh] flex items-center justify-center overflow-hidden"
>
  <!-- Background Gradient -->
  <div
    class="absolute inset-0 bg-gradient-to-b from-bio-gray-900/50 via-bio-black to-bio-black"
  >
  </div>

  <!-- Animated Grid Pattern -->
  <div class="absolute inset-0 opacity-20">
    <div
      class="absolute inset-0"
      style="background-image: radial-gradient(circle at 1px 1px, rgba(99, 102, 241, 0.3) 1px, transparent 0); background-size: 40px 40px;"
    >
    </div>
  </div>

  <!-- Glow Effect 'Heartbeat' -->
  <div
    class="absolute top-1/4 left-1/2 -translate-x-1/2 w-[600px] h-[600px] bg-bio-accent/30 rounded-full blur-[100px] animate-beat mix-blend-screen"
  >
  </div>

  <!-- Equalizer Background Effect -->
  <div
    class="absolute bottom-0 left-0 right-0 h-96 flex items-end justify-center gap-1 sm:gap-4 opacity-20 pointer-events-none overflow-hidden mask-linear-fade"
  >
    <div class="w-4 sm:w-8 bg-bio-accent rounded-t-lg animate-eq-1 h-32"></div>
    <div class="w-4 sm:w-8 bg-bio-accent rounded-t-lg animate-eq-2 h-48"></div>
    <div class="w-4 sm:w-8 bg-bio-accent rounded-t-lg animate-eq-3 h-24"></div>
    <div class="w-4 sm:w-8 bg-bio-accent rounded-t-lg animate-eq-4 h-40"></div>
    <div class="w-4 sm:w-8 bg-bio-accent rounded-t-lg animate-eq-2 h-36"></div>
    <div class="w-4 sm:w-8 bg-bio-accent rounded-t-lg animate-eq-5 h-56"></div>
    <div class="w-4 sm:w-8 bg-bio-accent rounded-t-lg animate-eq-1 h-28"></div>
    <div class="w-4 sm:w-8 bg-bio-accent rounded-t-lg animate-eq-3 h-44"></div>
  </div>

  <div class="relative z-10 container-wide text-center py-20">
    <!-- Small Label -->
    <div
      class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-bio-gray-800/50 border border-bio-gray-700 mb-8 backdrop-blur-sm"
    >
      <span class="w-2 h-2 rounded-full bg-bio-accent animate-pulse"></span>
      <span class="text-sm text-bio-gray-300"
        >The Future of Electronic Music Management</span
      >
    </div>

    <!-- Main Title -->
    <h1
      class="text-5xl md:text-6xl lg:text-7xl xl:text-8xl font-bold text-bio-white mb-6 tracking-tight"
    >
      {title}
    </h1>

    <!-- Subtitle -->
    {
      subtitle && (
        <p class="text-xl md:text-2xl text-bio-gray-400 mb-12 max-w-3xl mx-auto">
          {subtitle}
        </p>
      )
    }

    <!-- CTAs -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
      {
        primaryCta && (
          <a
            href={primaryCta.href}
            class="btn-primary text-lg px-8 py-4 shadow-lg shadow-bio-accent/20"
          >
            {primaryCta.label}
          </a>
        )
      }
      {
        secondaryCta && (
          <a
            href={secondaryCta.href}
            class="btn-secondary text-lg px-8 py-4 backdrop-blur-sm bg-bio-gray-800/80"
          >
            {secondaryCta.label}
          </a>
        )
      }
    </div>

    <!-- Stats -->
    <div class="mt-20 grid grid-cols-2 md:grid-cols-4 gap-8 max-w-4xl mx-auto">
      <div class="text-center">
        <div class="text-3xl md:text-4xl font-bold text-bio-white mb-2">
          500+
        </div>
        <div class="text-sm text-bio-gray-500">Artists</div>
      </div>
      <div class="text-center">
        <div class="text-3xl md:text-4xl font-bold text-bio-white mb-2">
          200+
        </div>
        <div class="text-sm text-bio-gray-500">Venues</div>
      </div>
      <div class="text-center">
        <div class="text-3xl md:text-4xl font-bold text-bio-white mb-2">
          50+
        </div>
        <div class="text-sm text-bio-gray-500">Festivals</div>
      </div>
      <div class="text-center">
        <div class="text-3xl md:text-4xl font-bold text-bio-white mb-2">
          1000+
        </div>
        <div class="text-sm text-bio-gray-500">Bookings</div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div
    class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 text-bio-gray-500"
  >
    <span class="text-xs uppercase tracking-wider">Scroll</span>
    <div class="w-px h-8 bg-gradient-to-b from-bio-gray-500 to-transparent">
    </div>
  </div>
</section>

<style>
  /* Beat Animation (Heartbeat) */
  @keyframes beat {
    0%,
    100% {
      transform: translate(-50%, 0) scale(1);
      opacity: 0.2;
    }
    50% {
      transform: translate(-50%, 0) scale(1.3);
      opacity: 0.5;
    }
  }

  .animate-beat {
    animation: beat 3s ease-in-out infinite;
  }

  /* Equalizer Animations */
  @keyframes eq1 {
    0%,
    100% {
      height: 30%;
      opacity: 0.3;
    }
    50% {
      height: 70%;
      opacity: 0.7;
    }
  }
  @keyframes eq2 {
    0%,
    100% {
      height: 50%;
      opacity: 0.5;
    }
    50% {
      height: 90%;
      opacity: 0.9;
    }
  }
  @keyframes eq3 {
    0%,
    100% {
      height: 20%;
      opacity: 0.2;
    }
    50% {
      height: 60%;
      opacity: 0.6;
    }
  }
  @keyframes eq4 {
    0%,
    100% {
      height: 40%;
      opacity: 0.4;
    }
    50% {
      height: 80%;
      opacity: 0.8;
    }
  }
  @keyframes eq5 {
    0%,
    100% {
      height: 60%;
      opacity: 0.6;
    }
    50% {
      height: 100%;
      opacity: 1;
    }
  }

  .animate-eq-1 {
    animation: eq1 0.8s ease-in-out infinite alternate;
  }
  .animate-eq-2 {
    animation: eq2 1.2s ease-in-out infinite alternate;
  }
  .animate-eq-3 {
    animation: eq3 1s ease-in-out infinite alternate;
  }
  .animate-eq-4 {
    animation: eq4 1.4s ease-in-out infinite alternate;
  }
  .animate-eq-5 {
    animation: eq5 0.9s ease-in-out infinite alternate;
  }

  .mask-linear-fade {
    mask-image: linear-gradient(to top, black 0%, transparent 100%);
    -webkit-mask-image: linear-gradient(to top, black 0%, transparent 100%);
  }
</style>
