---
import { mainNavigation } from "../../data/navigation";
import MobileNav from "../react/MobileNav";
import LanguageSwitcher from "../react/LanguageSwitcher";
import HeaderAuth from "../react/HeaderAuth";
import { getLangFromUrl } from "../../i18n";

const url = new URL(Astro.request.url);
const lang = getLangFromUrl(url);
---

<header
  class="fixed top-0 left-0 right-0 z-50 bg-bio-black/80 backdrop-blur-lg border-b border-bio-gray-800/50"
>
  <div class="container-wide">
    <nav class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <a
        href={lang === "de" ? "/de" : "/"}
        class="flex items-center gap-3 group flex-shrink-0"
      >
        <img src="/logo.svg" alt="BIO BEATS" class="h-8 w-8" />
        <span
          class="text-xl md:text-2xl font-bold tracking-tight text-bio-white group-hover:text-bio-accent transition-colors whitespace-nowrap"
        >
          BIO BEATS
        </span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-1">
        {
          mainNavigation.map((item) => {
            const href = lang === "de" ? `/de${item.href}` : item.href;

            // Normalize paths for comparison (remove language prefix)
            const currentPathClean =
              url.pathname.replace(/^\/(en|de)/, "").replace(/\/$/, "") || "/";
            const itemPathClean = item.href.replace(/\/$/, "") || "/";

            const isActive =
              item.href === "/"
                ? currentPathClean === "/" // Exact match for home
                : currentPathClean.startsWith(itemPathClean); // Prefix match for others
            return (
              <a
                href={href}
                class:list={[
                  "px-4 py-2 text-sm transition-colors rounded-lg hover:bg-bio-gray-800/50 whitespace-nowrap",
                  isActive
                    ? "text-bio-accent font-medium"
                    : "text-bio-gray-300 hover:text-bio-white",
                ]}
              >
                {item.label}
              </a>
            );
          })
        }
      </div>

      <!-- Desktop Actions -->
      <div class="hidden lg:flex items-center gap-3">
        <LanguageSwitcher
          client:only="react"
          currentLang={lang}
          currentPath={url.pathname}
        />
        <HeaderAuth client:only="react" currentLang={lang} />
      </div>

      <!-- Mobile Menu Button -->
      <MobileNav
        client:only="react"
        navigation={mainNavigation}
        currentPath={url.pathname}
      />
    </nav>
  </div>
</header>

<!-- Spacer for fixed header -->
<div class="h-16 md:h-20"></div>
